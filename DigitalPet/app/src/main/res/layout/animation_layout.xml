<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/animationObjectImageView"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/animationUserImageView"
        app:layout_constraintEnd_toStartOf="@+id/animationUserImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/animationUserImageView"
        app:srcCompat="@drawable/battle_menu" />

    <ImageView
        android:id="@+id/animationUserImageView"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/animationObjectImageView"
        app:srcCompat="@drawable/battle_menu_highlight" />

    <ImageView
        android:id="@+id/animationBarImageView"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:background="@drawable/energy_bar_0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>