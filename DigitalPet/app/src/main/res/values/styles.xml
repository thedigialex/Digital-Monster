<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="roundedButton">
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="tabButton">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:background">@drawable/tab_button</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="tabHeader">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:background">@drawable/tab_header</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="deviceButton">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:background">@drawable/case_button</item>
    </style>
    <style name="menuTop">
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>
    <style name="menuBottom">
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>
    <style name="fontHeader">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textColorHighlight">@color/accent</item>
        <item name="android:textColorHint">@color/accent</item>
        <item name="android:textColorLink">@color/text</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="errorText">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/error</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="fontSubHeader">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorHighlight">@color/accent</item>
        <item name="android:textColorHint">@color/accent</item>
        <item name="android:textColorLink">@color/text</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="fontParagraph">
        <item name="android:lineSpacingExtra">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorHighlight">@color/accent</item>
        <item name="android:textColorHint">@color/accent</item>
        <item name="android:textColorLink">@color/text</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="fontParagraphDark">
        <item name="android:lineSpacingExtra">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textColorHighlight">@color/accent</item>
        <item name="android:textColorHint">@color/accent</item>
        <item name="android:textColorLink">@color/primary</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="fontInput">
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorHighlight">@color/accent</item>
        <item name="android:textColorHint">@color/accent</item>
        <item name="android:textColorLink">@color/text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">24dp</item>
    </style>
</resources>