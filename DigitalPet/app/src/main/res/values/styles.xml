<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="header">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">"@color/text"</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="roundedButton">
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/text</item>
    </style>
    <style name="deviceButton">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@drawable/case_button</item>
    </style>
    <style name="menuTop">
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>
    <style name="menuBottom">
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>
    <style name="fontHeader">
        <item name="android:fontFamily">@font/press_start_2p</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorHighlight">@color/light_accent</item>
        <item name="android:textColorHint">@color/accent</item>
        <item name="android:textColorLink">@color/text</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="fontSubHeader">
        <item name="android:fontFamily">@font/press_start_2p</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorHighlight">@color/light_accent</item>
        <item name="android:textColorHint">@color/accent</item>
        <item name="android:textColorLink">@color/text</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="fontParagraph">
        <item name="android:fontFamily">@font/press_start_2p</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorHighlight">@color/light_accent</item>
        <item name="android:textColorHint">@color/accent</item>
        <item name="android:textColorLink">@color/text</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>